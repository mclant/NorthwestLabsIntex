@model IEnumerable<NorthwestLabs.Models.AssayTypes>

@{
    ViewBag.Title = "FinalizeQuote";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("GetAQuote","Client")">Create Account</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("PlaceQuote","Client")">Quote Information</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("PlaceQuote","Client")">Compound Information</a></li>
        <li class="breadcrumb-item active" aria-current="page">Assay Information</li>
    </ol>
</nav>

<h2>Finalize your Quote by selecting which Assay you would like a quote for.</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssayProtocol)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssayProtocol)
            </td>
            <td>
                @Html.ActionLink("Select", "QuoteThankYou", "Client", new { custname = ViewBag.CustomerName })
            </td>
        </tr>
    }

</table>
