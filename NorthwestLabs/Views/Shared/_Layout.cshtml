<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Northwest Labs, Inc.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="~/Home/Index">
                <img alt="Brand" src="~/Content/Photos/ecdc671e-2b6f-46df-8d65-a9731f98b039.jpeg"  height="40">
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="padding-top:8px;font-family:Bahnschrift; font-weight:500">
                    <li class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="padding:15px,2px,0px,15px; margin:8px; font-family:Bahnschrift; font-size:larger;font-weight:500">
                            <!-- Company Information Drop-down list -->
                            Company Information
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" style="font-family:Bahnschrift; font-weight:500">
                            <li>@Html.ActionLink("About Us", "AboutUs", "CompanyInfo")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "CompanyInfo")</li>
                            <li>@Html.ActionLink("Lab Pictures", "LabPics", "CompanyInfo")</li>
                            <li>@Html.ActionLink("Our Mission", "Mission", "CompanyInfo")</li>
                            <li>@Html.ActionLink("About Our CEO", "AboutCEO", "CompanyInfo")</li>
                        </ul>
                    </li>
                    <li class="dropdown" style="font-family:Bahnschrift; font-weight:500">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="padding:15px,2px,0px,15px; margin:8px; font-family:Bahnschrift; font-size:larger;font-weight:500">
                            <!-- Services Drop-down list -->
                            Services
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" style="font-family:Bahnschrift; font-weight:500">
                            <li>@Html.ActionLink("Our Services", "Services", "Services")</li>
                            <li>@Html.ActionLink("Pharmacology Catalog", "PharmacologyCatalog", "Services")</li>
                            <li>@Html.ActionLink("Protocol Notebook", "ProtocolNotebook", "Services")</li>
                        </ul>
                    </li>
                    <li>
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="padding:15px,2px,0px,15px; margin:8px; font-family:Bahnschrift; font-size:larger;font-weight:500">
                            <!-- Client Portal Drop-down list -->
                            Client Portal
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" style="font-family:Bahnschrift; font-weight:500">
                            <li>@Html.ActionLink("Submit New Order", "NewOrder", "Client")</li>
                            <li>@Html.ActionLink("Get a Quote", "GetAQuote", "Client")</li>
                            <li>@Html.ActionLink("View Orders", "Login", "Login")</li>
                            <li>@Html.ActionLink("View Test Results", "Login", "Login")</li>
                            <li>@Html.ActionLink("My Account", "Login", "Login")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="padding:15px,2px,0px,15px; margin:8px; font-family:Bahnschrift; font-size:larger;font-weight:500">
                            <!-- Employee Portal Drop-down list -->
                            Employee Portal
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" style="font-family:Bahnschrift; font-weight:500">
                            <li>@Html.ActionLink("Admin", "Login", "Login")</li>
                            <li>@Html.ActionLink("Sales Employee", "Login", "Login")</li>
                            <li>@Html.ActionLink("Head of Pharmacology", "Login", "Login")</li>
                            <li>@Html.ActionLink("Lab Manager", "Login", "Login")</li>
                            <li>@Html.ActionLink("Director of Pharmacology", "Login", "Login")</li>
                            <li>@Html.ActionLink("Lab Tech", "Login", "Login")</li>
                        </ul>
                    </li>
                </ul>

                <div class="pull-right nav navbar-nav" style="padding-top:8px;font-family:Bahnschrift; font-weight:500">
                    <!-- Anchored to the right-side of the navbar -->
                    <button class="btn btn-primary" type="button" style="padding:15px,2px,0px,15px;margin:8px;font-family:Bahnschrift;font-size:larger;font-weight:500;" onclick="location.href='/Login/Logout'">
                        <!-- Logout button -->
                        Logout
                    </button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Northwest Labs</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
